{% extends 'base.html.twig' %}

{% block title %} Film !{% endblock %}

{% block body %}

<p> Nombre de film actuellement : {{ total }} </p>

    {% for film in films %}
        <section class="oeuvre">
            <article>
                <h2> {{film.title}} </h2>
                <div class="metadata"> {{ film.createdAt | date('d/m/Y') }} {{film.createdAt | date('H:i')}} </div>
                <div class="content">
                    {{ film.content | raw }}
                    <img src="{{ film.image }}">
                </div>
                <a href="/{{film.category.title |slug }}/{{film.title |slug }}-{{film.id}}" class="btn btn-primary"> Lire la suite </a>
                <!-- <a href="{{ path('film_show', {id: film.id, category: film.category.title, title: film.title}) }}" class="btn btn-primary"> Lire la suite </a> -->
            </article>
        </section>
    {% endfor %}
    
    <div class="pagination"> {{knp_pagination_render(films)}} </div>
        
{% endblock %}
