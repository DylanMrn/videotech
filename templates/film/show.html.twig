{% extends 'base.html.twig' %}

{% block body %}

<article>
    <h2> {{ film.title }} </h2>
    {{ film.image }}
    {{ film.category.title }}
    {{ film.content | raw }}
</article>

<a href="{{ path('film_edit', {'id': film.id }) }}" class="btn btn-primary">  Modifier le film </a>
<a href="{{ path('film_delete', {'id': film.id }) }}" class="btn btn-danger">  Supprimer le film </a>
{% endblock body %}